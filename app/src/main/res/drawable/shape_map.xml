<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <rotate
            android:fromDegrees="5"
            android:toDegrees="5"
            android:pivotX="-540%"
            android:pivotY="150%"
            >
            <shape
                android:shape="ring"
                android:thickness="-54dp"
                android:useLevel="false"
                >
                <stroke
                    android:color="@color/colorPrimaryDark"
                    android:width="100dp"/>
            </shape>
        </rotate>
    </item>

    <item>
        <rotate
            android:fromDegrees="45"
            android:toDegrees="45"
            android:pivotX="-60%"
            android:pivotY="99%" >
            <shape
                android:shape="rectangle"
                android:innerRadius="10000000dp"
                >
                <stroke android:color="@color/transparent" android:width="200dp"/>
                <solid
                    android:color="@color/colorPrimaryDark" />
            </shape>
        </rotate>
    </item>

</layer-list>